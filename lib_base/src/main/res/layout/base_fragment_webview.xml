<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/mWebViewSmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.moufans.lib_base.base.webview.ExtendedWebView
                android:id="@+id/mWebViewWv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />

            <com.moufans.lib_base.base.recyclerview.EmptyView
                android:id="@+id/mErrorEmptyView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <include
                android:id="@+id/mLoadDataLayout"
                layout="@layout/base_progress_dialog"
                android:layout_width="@dimen/base_dp100"
                android:layout_height="@dimen/base_dp100"
                android:layout_gravity="center" />

        </FrameLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</layout>